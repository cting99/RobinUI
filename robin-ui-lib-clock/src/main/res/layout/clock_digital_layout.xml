<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/clock_digital_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="?android:attr/colorForeground"
        app:srcCompat="@drawable/clock_circular_bg" />

    <TextView
        android:id="@+id/clock_digital_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="12:45"
        android:textSize="@dimen/clock_time_best_text_size"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/clock_digital_bg"
        app:layout_constraintEnd_toEndOf="@+id/clock_digital_bg"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/clock_digital_bg"
        app:layout_constraintTop_toTopOf="@+id/clock_digital_bg"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/clock_digital_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="4月3日 星期二"
        app:layout_constraintEnd_toEndOf="@+id/clock_digital_time_text"
        app:layout_constraintStart_toStartOf="@+id/clock_digital_time_text"
        app:layout_constraintTop_toBottomOf="@+id/clock_digital_time_text" />

</android.support.constraint.ConstraintLayout>