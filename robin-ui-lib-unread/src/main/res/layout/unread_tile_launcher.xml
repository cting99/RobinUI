<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unread_icon_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/unread_ic_call_old"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unread_count_text"
        android:layout_width="@dimen/unread_count_text_width"
        android:layout_height="@dimen/unread_count_text_height"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/unread_count_circular_red_bg"
        android:gravity="center"
        android:lines="1"
        android:text="99+"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/unread_icon_img"
        app:layout_constraintStart_toEndOf="@+id/unread_icon_img" />

    <TextView
        android:id="@+id/unread_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unread_icon_img"
        tools:text="call" />
</android.support.constraint.ConstraintLayout>